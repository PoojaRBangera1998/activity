// cats and dogs
#include <stdio.h>
int main()
{
    int T;
    scanf("%d", &T);
    while (T>0)
    {
        int C,D,L,x;
        scanf("%d%d%d",&C,&D,&L);
        if((L%2==0)&&(L!=2)){
              printf("yes\n");
        }
        else{
            printf("no\n");
        }


        T=T-1;

    }
    return 0;
}
