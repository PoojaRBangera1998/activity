//maxmimum and minimum
#include <stdio.h>
#include <stdlib.h>
#include<string.h>

int main()
{
    int T;
    scanf("%d", &T);
     while (T>0)
    {
        int n,i,a[100],min;
        scanf("%d",&n);
        for(i=0;i<n;i++)
        {
            scanf("%d",&a[i]);
            if(min>a[i])
            {
                min=a[i];
            }

        }
        printf("%d\n",min*(n-1));
        T=T-1;
    }
    return 0;
}
